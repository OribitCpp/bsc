// expected-no-diagnostics

#include "future.hbs"
#include <stdlib.h>

async int read(int a) {
  return 0;
}

async int f(int start) {

  int a = await read(2);
  int b = 2;

  if (a == 1) {
    if (b == 3)
        return await read(3);

    return await read(2);
  }

  return start;
}

int main() {
  trait Future<int>* this = f(1);
  this->poll();
  return 0;
}
