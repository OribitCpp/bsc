#include "future.hbs"
#include <stdlib.h>

async int read(int a) {
  return 0;
}

static int count = 10;

async int f(int start) {
    while (count--)
    {
        start ++;
    }
    int result = await read(2);
    return result + 5 + start;
}

int main() {
  trait Future<int>* this = f(1);
  this->poll();
  return 0;
}