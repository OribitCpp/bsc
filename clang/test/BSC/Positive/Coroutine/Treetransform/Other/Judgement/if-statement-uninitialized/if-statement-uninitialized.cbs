// expected-no-diagnostics

#include "future.hbs"
#include <stdlib.h>

async int read(int a) {
  return 0;
}

async int f() {
    int ret;
    if (1) {
        ret = await read(0);
    } else {
        ret = await read(0);
    }
    return ret;
}

int main() {
  trait Future<int>* this = f();
  this->poll();
  this->free();
  return 0;
}

