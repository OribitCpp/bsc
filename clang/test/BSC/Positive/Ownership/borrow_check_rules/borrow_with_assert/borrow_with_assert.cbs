// RUN: %clang %s -o %test.output
// RUN: %test.output
// RUN: %clang -rewrite-bsc %s -o %t-rw.c
// RUN: %clang %t-rw.c -o %t-rw.output
// RUN: %t-rw.output
// expected-no-diagnostics

#include <assert.h>

void test() {
  int x = 1;
  int* borrow p = &mut x;
  *p = 2;
  assert(*p == 2); 
}

int main() {
  test();
  return 0;
}
