// expected-no-diagnostics

#include <stdio.h>

trait TR {
  void sayHi(This* this);
  int getAns(This* this, int x);
};

// CHECK-L: #line 20 "{{.*}}.cbs"
void int::sayHi(int* this) {
  printf("Hi\n");
}

// CHECK-L: #line 25 "{{.*}}.cbs"
int int::getAns(int* this, int x) {
  return x;
}

impl trait TR for int;

// CHECK-L: #line 32 "{{.*}}.cbs"
int main() {
  int x = 42;
  x.sayHi();
  int y = x.getAns(2023);
  printf("y: %d\n", y);
  return 0;
}

